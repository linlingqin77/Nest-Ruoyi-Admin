{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "spec": false,
    "flat": false
  },
  "compilerOptions": {
    "assets": [
      {
        "include": "config/*.yml",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
